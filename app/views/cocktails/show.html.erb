

<div class="container">

<div class="cocktail-container">
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key %>
  <% end %>
  
  <div class="cocktail-card">
    <h1><%=  @cocktail.name %></h1>

    <h3>Ingredients</h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        
        <p><%= dose.description %> <%= dose.ingredient.name %>  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
          <i class="far fa-trash-alt"></i></p>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>


<div class="dose-form">
  <div class="header-card">
    <h3>Add ingredient</h3>
  </div>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description, label: "Amount", placeholder: "e.g 1 oz" %>
      <%= f.association :ingredient, collection: Ingredient.order('name ASC') %>
      <%= f.submit "Add",  class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

