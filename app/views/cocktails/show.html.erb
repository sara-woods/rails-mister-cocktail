

<div class="container">

<div class="cocktail-container">
  <img src="https://images.unsplash.com/photo-1497534446932-c925b458314e?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8MzF8fGNvY2t0YWlsfGVufDB8fDB8&auto=format&fit=crop&w=500&q=60" alt="">
  
  <div class="cocktail-card">
    <h1><%=  @cocktail.name %></h1>

    <h3>Ingredients</h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        
        <p><%= dose.description %> <%= dose.ingredient.name %>  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
          <i class="far fa-trash-alt"></i></p>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>


<div class="dose-form">
  <div class="header-card">
    <h3>Add ingredient</h3>
  </div>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description, label: "Amount", placeholder: "e.g 1 oz" %>
      <%= f.association :ingredient, collection: Ingredient.order('name ASC') %>
      <%= f.submit "Add",  class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

