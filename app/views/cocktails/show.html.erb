<h1>One cocktail</h1>
<h2><%=  @cocktail.name %></h2>

<h2>Ingredients</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <p><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "🗑️", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %></p>
  </li>
  <% end %>

</ul>




<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.order('name ASC') %>
  <%= f.submit "Add",  class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", cocktails_path, class: "btn btn-primary" %>