<div class="home-img">
  <h1 class = "img-header">Explore our recipes!</h1>
</div>

<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1592858167090-2473780d894d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1yZWxhdGVkfDZ8fHxlbnwwfHx8&auto=format&fit=crop&w=500&q=60)">
        <h3><%= link_to cocktail.name, cocktail_path(cocktail)  %></h3>
      </div>
    <% end %>
  </div>
</div>
